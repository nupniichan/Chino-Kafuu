# FastAPI settings
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=True

# LLM settings
LLM_MODE=openrouter
LLM_N_CTX=8192
LLM_N_GPU_LAYERS=0
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_MAX_TOKENS=512

# OpenRouter settings
OPENROUTER_API_KEY=your-api-key-here
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct:free
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_TIMEOUT=60

# Memory settings
SHORT_TERM_MEMORY_SIZE=20
SHORT_TERM_TOKEN_LIMIT=8192
MEMORY_IMPORTANCE_THRESHOLD=0.8
IDLE_TIMEOUT_SECONDS=30
MEMORY_CACHE=in-memory

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# VAD (Voice Activity Detection) settings
VAD_THRESHOLD=0.5
SILENCE_CHUNKS_NEEDED=5

# Audio settings
SAMPLE_RATE=16000
CHUNK_SIZE=512

# File upload limits
MAX_UPLOAD_SIZE_MB=50
